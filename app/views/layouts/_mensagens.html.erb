<div class="container">
	<div class="col-xs-10 col-xs-offset-1">
		<% flash.each do |nome, msg| %>
			<div class='alert alert-<%="#{nome}" %>'>
				<a href="#" class="close" data-dismiss="alert">&#215;</a>
				<%= content_tag :div, msg, :id => "flash_#{nome}" if msg.is_a?(String) %>
			</div>
		<%end%>
	</div>
</div>
