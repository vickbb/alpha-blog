
<%= render "compartilhado/erros", objeto: @usuario %>
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@usuario, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">	
					<%= f.label :username %>
				</div>
				<div class="col-sm-12">
					<%= f.text_field :username, class: "form-control", placeholder: "Titulo do usuario", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :email %>
				</div>
				<div class="col-sm-12">
					<%= f.email_field :email, class: "form-control", placeholder: "Insira o email" %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :password %>
				</div>
				<div class="col-sm-12">
					<%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-12">
					<%= f.submit(@usuario.new_record? ? "Enviar" : "Atualizar", class: "btn btn-primary btn- lg") %>
				</div>
			</div>
		<% end %>
		<div align="center">
			[ <%= link_to "Cancelar e voltar", artigos_path %> ]
		</div>
	</div>
</div>