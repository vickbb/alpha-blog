<h1 align="center">Todos Bloggers</h1>
<%= will_paginate %>
<% @usuarios.each do |usuario|%>
	<ul class="listando">
		<div class="row">
			<div class="well">
				<li>
					<%= link_to gravatar_for(usuario), usuario_path(usuario) %>
				</li>
				<li class="titulo-artigo">
					<%= link_to usuario.username, usuario_path(usuario) %>
				</li>
				<li>
					<small>
						<%= pluralize(usuario.artigos.count, "artigo") if usuario.artigos %>
            <% if logged_in? and usuario_atual.admin? %>
              <li><%= link_to "Deletar esse usuario", usuario_path(usuario), method: :delete,
                                            data: { confirm: "Tem certeza que deseja deletar esse usuario e
                                            todos os seus artigos?" }  %>
              </li>
            <% end %>
					</small>
				</li>
			</div>
		</div>
	</ul>
<% end %>
<%= will_paginate %>