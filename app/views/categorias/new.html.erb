<h1 align="center">Nova: Categoria</h1>

<%= render "compartilhado/erros", objeto: @categoria %>

<%= form_for(@categoria, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :nome %>
    </div>
    <div class="col-sm-12">
      <%= f.text_field :nome, class: "form-control", placeholder: "Nome da Categoria", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-12">
      <%= f.submit "Criar", class: "btn btn-primary btn- lg" %>
    </div>
  </div>
<% end %>
<div align="center">
  [ <%= link_to "Cancelar e voltar", categorias_path %> ]
</div>
