<%= render "compartilhado/erros", objeto: @artigo %>

<div class="col-xs-12">
	<%= form_for(@artigo, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-2">	
				<%= f.label :titulo %>
			</div>
			<div class="col-sm-12">
				<%= f.text_field :titulo, class: "form-control", placeholder: "Titulo do artigo", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :descricao %>
			</div>
			<div class="col-sm-12">
				<%= f.text_area :descricao, rows: 10, class: "form-control", placeholder: "Corpo do artigo" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-12">
				<%= f.submit class: "btn btn-primary btn- lg" %>
			</div>
		</div>
	<% end %>
	<div align="center">
		[ <%= link_to "Cancelar e voltar", artigos_path %> ]
	</div>
</div>
